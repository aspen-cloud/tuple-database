{
	"version": "2.3.4",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"mapRoot": ".",
		"module": "commonjs",
		"allowJs": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"removeComments": false,
		"experimentalDecorators": true,
		"jsx": "react",
		"target": "es2020",
		"lib": ["dom", "scripthost", "esnext.asynciterable", "ES2020"],
		"outDir": "build"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
